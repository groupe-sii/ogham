							<toc>left</toc>
							<icons>font</icons>
							<tabsize>3</tabsize>
							<linkcss>true</linkcss>
							<sectanchors>true</sectanchors>
							<docinfo2>true</docinfo2>
							<experimental>true</experimental>
							<tabsize>4</tabsize>
							<imagesdir />
							<ogham-version>${docLatestReleaseVersion}</ogham-version>
							<ogham-dev-version>${docFutureDevVersion}</ogham-dev-version>
